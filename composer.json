{
    "name": "WebReader",
    "description": "A place to read all of you rss feeds and other saved content.",
    "keywords": ["rss", "feed-reader", "api", "react", "php", "slim"],
    "homepage": "https://github.com/jdonley83/webreader",
    "license": "MIT",
    "authors": [
        {
            "name": "Joe Donley",
            "email": "jdonley83@gmail.com",
            "homepage": "http://jwdonley.com/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "gabordemooij/redbean": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "WebReader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public index.php",
        "test": "phpunit --verbose"
    }

}
